{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "import/extensions": 0,
        "import/no-cycle" : 0,
        "import/prefer-default-export" : 0,
        "no-param-reassign" : 0,
        "linebreak-style": ["error", "windows"],
        "no-restricted-syntax": ["error", "never"],
        "class-methods-use-this": 0,
        "indent": [ "error", 4 ],
        "space-in-parens": [ "error", "always" ]
    },
    "ignorePatterns": [
        "jest.config.js",
        "webpack.config.js"
    ]   
}
/*.\node_modules\.bin\eslint --init */